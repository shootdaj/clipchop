{
  "buildCommand": "npm install --prefix packages/desktop --legacy-peer-deps && cd packages/desktop && npm run build",
  "outputDirectory": "packages/desktop/dist",
  "installCommand": "echo 'Skipping root install'",
  "framework": null,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Cross-Origin-Opener-Policy", "value": "same-origin" },
        { "key": "Cross-Origin-Embedder-Policy", "value": "require-corp" }
      ]
    }
  ]
}
