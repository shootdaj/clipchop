{
  "name": "clipchop-monorepo",
  "private": true,
  "version": "1.0.1",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:desktop": "cd packages/desktop && bun run electron:dev",
    "dev:mobile": "cd packages/mobile && bun run start",
    "build:desktop": "cd packages/desktop && bun run electron:build",
    "build:mobile": "cd packages/mobile && bun run build",
    "build:shared": "cd packages/shared && bun run build"
  },
  "devDependencies": {
    "typescript": "~5.6.2"
  },
  "dependencies": {
    "ffmpeg-kit-react-native": "^6.0.2",
    "react-native-document-picker": "^9.3.1",
    "react-native-fs": "^2.20.0"
  }
}
